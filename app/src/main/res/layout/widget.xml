<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_height="80dp"
    android:layout_width="160dp"
    android:background="#c1004d94"
    android:orientation="vertical"
    >
    <TextView android:layout_height="20dp"
        android:layout_width="match_parent" android:text="Радио «Ватан»" android:gravity="center"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView android:id="@+id/start"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@drawable/play"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
        <ImageView android:id="@+id/pause"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@drawable/pause"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>